@{
    ViewData["Title"] = "Checkout";
    var cart = ViewBag.Cart as EcommerceWebApp.Models.Cart;
    var user = ViewBag.User as EcommerceWebApp.Models.User;
}

<h1>Checkout</h1>

<div class="row">
    <div class="col-md-8">
        <h3>Order Summary</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in cart!.Items)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Quantity</td>
                            <td>$@item.Product.Price.ToString("N2")</td>
                            <td>$@((item.Product.Price * item.Quantity).ToString("N2"))</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                        <td><strong>$@cart.TotalPrice.ToString("N2")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <h3 class="mt-4">Shipping Information</h3>
        <form asp-action="PlaceOrder" method="post">
            <div class="mb-3">
                <label for="shippingAddress" class="form-label">Shipping Address</label>
                <textarea class="form-control" id="shippingAddress" name="shippingAddress" rows="3" required>@user?.Address</textarea>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary">Back to Cart</a>
                <button type="submit" class="btn btn-success btn-lg">Place Order</button>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Order Details</h5>
            </div>
            <div class="card-body">
                <p><strong>Items:</strong> @cart.CartTotal</p>
                <p><strong>Subtotal:</strong> $@cart.TotalPrice.ToString("N2")</p>
                <p><strong>Shipping:</strong> Free</p>
                <hr>
                <h4><strong>Total:</strong> $@cart.TotalPrice.ToString("N2")</h4>
            </div>
        </div>
    </div>
</div>